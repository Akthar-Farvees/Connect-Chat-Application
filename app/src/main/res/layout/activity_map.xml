<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapActivity"
    android:orientation="vertical"
    android:background="@drawable/w3">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect Location"
        android:textColor="#fa983a"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        android:padding="20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fa983a"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Company is registered in Hyderabad (Uttar Pradesh) Registrar Office. Connect Application Services Private Limited registered address is FLAT NO. 1,3RD FLOOR,1BHK,PINK ROSE APPT. SARFABAD, SECTOR-23,GAUTAM BUDDH NAGAR,Gautam Buddha Nagar-201301,UP."
        android:textSize="17dp"
        android:textColor="@color/selectedGray"
        android:padding="20dp"
        android:textAlignment="textStart"
        android:justificationMode="inter_word" />



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame_layout_map"
        android:layout_margin="20dp"
        />



</LinearLayout>